@page
@model AppointmentsModel
@using System.Security.Claims
@{
    ViewData["Title"] = "Appointments";
}
@{
    if (HttpContext.User.FindFirstValue(ClaimTypes.Role) != null)
    {
        Layout = LayoutAuthorizer.GetLayoutFromRole(this.HttpContext);
    }
    else
    {
        Layout = "_Layout";
    }
}

<div class="container mt-5">
    <h1>Appointments</h1>
    <p>Welcome to the appointments page. Here you can view and manage your upcoming appointments.</p>
    <div class="row mt-4">
        <div class="col-md-6">
            <h2>Upcoming Appointments</h2>
            <table class="table">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Time</th>
                        <th>Doctor</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var appointment in Model.UpcomingAppointments)
                    {
                        <tr>
                            <td>@appointment.AppointmentDate.ToShortDateString()</td>
                            <td>@appointment.AppointmentTime.ToString("hh\\:mm")</td>
                            
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="col-md-6">
            <h2>Schedule a New Appointment</h2>
            <form method="post">
                <div class="mb-3">
                    <label for="date" class="form-label">Date</label>
                    <input type="date" class="form-control" id="date" name="date" required>
                </div>
                <div class="mb-3">
                    <label for="time" class="form-label">Time</label>
                    <input type="time" class="form-control" id="time" name="time" required>
                </div>
                <div class="mb-3">
                    <label for="doctor" class="form-label">Doctor</label>
                </div>
                <div class="mb-3">
                    <label for="notes" class="form-label">Notes</label>
                    <textarea class="form-control" id="notes" name="NewAppointment.AppointmentNotes" rows="3"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Schedule Appointment</button>
            </form>
        </div>
    </div>
</div>
    